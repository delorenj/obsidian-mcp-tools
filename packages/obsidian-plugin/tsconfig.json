{
  "compilerOptions": {
    // Enable language features
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "target": "ES2018",
    "module": "ESNext",
    "allowJs": true,

    // Bundler mode
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "isolatedModules": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,

    // Some stricter flags
    "noImplicitAny": true,
    "useDefineForClassFields": true,

    // Developer experience
    "noErrorTruncation": true,

    // Path aliases
    "paths": {
      "$/*": ["./src/*"]
    }
  },
  "include": ["*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "playground"]
}
