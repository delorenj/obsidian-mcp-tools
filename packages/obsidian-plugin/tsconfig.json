{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2018",
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "$/*": ["./src/*"]
    }
  },
  "include": ["src/*.ts", "bun.config.ts"],
  "exclude": ["node_modules", "playground"]
}
